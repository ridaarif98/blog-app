<ul class="user-main">
  <% @users.each do |user| %>
    <%= link_to user_path(user) do%>
    <li>
        <% if user.photo %>
        <%= image_tag user.photo %>
        <% else  %>
        <img src="https://steelform.com/wp-content/uploads/2017/03/testimonial-avatar-150x150.jpg" alt="user_image" >
        <% end %>
        <div>
        <h1><%= user.name %></h1>
        <p>Number of posts : <%= user.posts.size %></p>
        </div>
    </li>
    <% end %>
  <% end %>
    
</ul>

