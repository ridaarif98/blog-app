<%= form_with  model:@post, class:"input-form"  do |f|%>

    <%= f.hidden_field :user_id, value: @user.id %>
    
    <%= f.label :title %><br>
    <%= f.text_field :title,  {:required => true}%><br>

    <%= f.label :text %><br>
    <%= f.text_area :text , {:required => true}%><br>

    <%= f.submit "Create Post", class: "submit" %>
<%end%>

<div class="btn-div">
    <button class="back-btn">
        <%=link_to 'Back', root_path%>
    </button>
</div>
