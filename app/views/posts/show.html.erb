<% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: name %>
<% end %>


<div class="show-post">
    <div class="show-post-user">
    <div>
      <h2>
      Post #<%= @post.title %> by:   <%= @post.user.name%>
      </h2>
      <p>Comments: <%=@post.comments_counter.to_i%> Likes: <%=@post.likes_counter.to_i%></p>
    </div>

    <p><%=@post.text%></p>
    </div>
    <div class="<%= comments?(@post)%> user-comments">
            <% @post.comments.each do |comment|%>
                <p>
                    <%=comment.user.name%> :
                    <%= comment.text%>
                </p>
            <%end%>
    </div>

</div>

<div>
<%= render partial: 'comments/form'%>
<%= render partial: 'likes/form'%>
<div class="btn-div">
    <button class="back-btn">
        <%=link_to 'Back', user_posts_path(@post.user)%>
    </button>
</div>
</div>